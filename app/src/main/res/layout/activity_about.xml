<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bkg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="48dp"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Добро пожаловать в приложение для хранения карт от Альфа Банка. Вы можете отсканировать свои карты и ранжировать их, в зависимости от близжайших магазинов."
        />

    <LinearLayout
        android:id="@+id/downBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar_style"
        android:gravity="center"
        android:padding="12dp"
        android:layout_margin="-2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginHorizontal="24dp"
            android:src="@drawable/home_button" />

        <ImageView
            android:id="@+id/add_button_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:src="@drawable/add_button_bottom" />

        <ImageView
            android:id="@+id/faq_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:src="@drawable/faq" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>