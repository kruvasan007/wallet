<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bkg"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="48dp"
        android:src="@drawable/add_button"
        android:layout_height="48dp"
        android:id="@+id/add_button"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_recycler"
        app:layout_constraintBottom_toBottomOf="@id/card_recycler"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toRightOf="@id/add_button"
        app:layout_constraintStart_toEndOf="@+id/add_button"
        app:layout_constraintTop_toBottomOf="@+id/header"
        tools:listitem="@layout/card" />

    <TextView
        android:id="@+id/header"
        android:layout_margin="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мои карты"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/category"
        app:layout_constraintTop_toBottomOf="@id/card_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Категории"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:layout_margin="16dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/category"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/category_style">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/marketicon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Магазины"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            android:textSize="12sp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>